<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/titleWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:textColor="#303F9F"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Recharge or pay bills for"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleWallet"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a8"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a9"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a10"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a11"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a12"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a13"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a14"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a15"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a16"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a17"
                    android:padding="10dp"
                    android:maxHeight="100dp"
                    android:maxWidth="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ffffff"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>